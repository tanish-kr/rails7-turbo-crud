<h1 class="heading1 mb-5">Chat Rooms</h1>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render 'rooms/messages/message', message: message %>
  <% end %>
</div>


<form>
  <label>Say something:</label></br>
  <input type="text" data-behavior="room_speaker" class="form-text-input">
</form>
