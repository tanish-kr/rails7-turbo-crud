<%= turbo_frame_tag :form %>

<p style="color: green"><%= notice %></p>

<div class="flex items-center mb-5">
  <div class="flex-auto">
    <h1 class="heading1">Posts</h1>
  </div>

  <div class="flex-initial">
    <%= link_to "New post", new_post_path, class: "btn-primary", data: { turbo_frame: :form }, aria_controls: "new-post" %>
  </div>
</div>

<div class="table">
  <div class="table-header-group">
    <div class="table-row">
      <div class="table-cell text-left">Title</div>
      <div class="table-cell text-left">Body</div>
      <div class="table-cell text-left">Published At</div>
      <div class="table-cell text-left">Operation</div>
    </div>
  </div>
  <div class="table-row-group">
    <% @posts.each do |post| %>
      <div class="table-row <%= cycle('dark:bg-gray-900', 'dark:bg-gray-800') %>">
        <%= render post %>
        <div class="table-cell">
          <%= link_to "Show", post, class: "text-link" %>
          <%= link_to edit_post_path(post), class: "text-link"  do %>
            <%= heroicon "pencil-square", options: { class: "w-6 h-6" } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

