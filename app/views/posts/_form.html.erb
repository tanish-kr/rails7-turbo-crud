<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-text-input" %>
  </div>

  <div class="mb-6">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-textarea-input", rows: 5 %>
  </div>

  <div class="mb-6">
    <%= form.label :published_at, class: "form-label" %>
    <%= form.datetime_field :published_at, class: "form-select-input" %>
  </div>

  <div class="flex">
    <%= form.submit nil, class: "btn-primary" %>
    <%= link_to "Back", posts_path, class: "btn-primary" %>
  </div>
<% end %>
